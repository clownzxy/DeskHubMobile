<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeskHubMobile.Views.HomePage"
             Title="HomePage">
    <AbsoluteLayout >

        <!-- BackgroundImage -->
        <Image Source="backgroundimagetwo.png" Aspect="AspectFill"
        AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"/>

        <!-- Search Bar -->
        <Frame   AbsoluteLayout.LayoutBounds="0.5,0.05,.6,40"  
                 AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" 
                 CornerRadius="18" 
                 BackgroundColor="#49A686" 
                 BorderColor="Transparent" 
                 Padding="0,0,0,0"
                 HasShadow="True" >
            <HorizontalStackLayout>
                <Image Source="searchicon.png" 
                       Scale="1" 
                       Margin="10,0,0,0"/>
                <Entry   Placeholder="Search" 
                         TextColor="White" 
                         FontSize="15" 
                         HeightRequest="400"/>
            </HorizontalStackLayout>
        </Frame>

        <!-- Rooms Carousel View -->
        <Frame AbsoluteLayout.LayoutBounds="0.5,0.3,0.9,450" 
               AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" 
               BorderColor="Black" 
               BackgroundColor="Transparent">

            <ScrollView>
                <StackLayout>
                    <!-- Solo -->
                    <CarouselView ItemsSource="{Binding ImagePaths}">
                        <CarouselView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                        </CarouselView.ItemsLayout>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}" Aspect="AspectFit"
                               HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <!-- more than 1 persons-->
                    <CarouselView ItemsSource="{Binding ImagePaths}">
                        <CarouselView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                        </CarouselView.ItemsLayout>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}" Aspect="AspectFit"
            HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <!-- more than 5 persons-->
                    <CarouselView ItemsSource="{Binding ImagePaths}">
                        <CarouselView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                        </CarouselView.ItemsLayout>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}" Aspect="AspectFit"
            HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                </StackLayout>
            </ScrollView>


        </Frame>

        <!-- Time In and Time Out -->
        <Frame   AbsoluteLayout.LayoutBounds="0.5,1,.9,200"  
                 AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" 
                 CornerRadius="10" 
                 BackgroundColor="Transparent" 
                 BorderColor="Transparent">
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <VerticalStackLayout>
                        <Label Text="Time In:" FontAttributes="Bold" FontSize="18" TextColor="White" Margin="15,0,0,0"/>
                        <Frame HeightRequest="55" WidthRequest="133" CornerRadius="20" HasShadow="True" >
                            <TimePicker Time="1:00:26" TextColor="#25936B" FontAttributes="Bold" FontSize="20" BackgroundColor="White" Margin="0,-10,0,-15.9"/>
                        </Frame>
                    </VerticalStackLayout>
                    <VerticalStackLayout Margin="45,0,0,0">
                        <Label Text="Time Out:" FontAttributes="Bold" FontSize="18" TextColor="White" Margin="15,0,0,0"/>
                        <Frame HeightRequest="55" WidthRequest="133" CornerRadius="20" HasShadow="True">
                            <TimePicker Time="1:00:26" TextColor="#25936B" FontAttributes="Bold" FontSize="20" BackgroundColor="White" Margin="0,-10,0,-15.9"/>
                        </Frame>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
               
                    <Button Margin="0,20,0,0" CornerRadius="20" Text="Check Room Availability" FontAttributes="Bold" WidthRequest="250" BackgroundColor="#25936B"/>
               
            </VerticalStackLayout>

        </Frame>

    </AbsoluteLayout>
</ContentPage>
