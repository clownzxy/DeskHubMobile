<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeskHubMobile.Views.RoomPage"
             Title="RoomPage">
    <AbsoluteLayout >

        <!-- BackgroundImage -->
        <Image Source="backgroundimagetwo.png" Aspect="AspectFill"
     AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"/>

        <ImageButton
        AbsoluteLayout.LayoutBounds="0.5,0.05,100,150"
        AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
        Aspect="AspectFit"
        Source="logo.png" />

        <Label Text="Rented Room" TextColor="White" FontAttributes="Bold" FontSize="25" AbsoluteLayout.LayoutBounds="0.5,0.45,.9,200"
        AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" Margin="10,-40,0,0"/>
        <Frame BackgroundColor="White" BorderColor="Transparent" 
               AbsoluteLayout.LayoutBounds="0.5,0.45,.9,200"
               AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" CornerRadius="20" HasShadow="True">

            <Label Text="Room Type:" FontAttributes="Bold" FontSize="Default" Margin="50,-10,0,0"/>
            

        </Frame>

        <Label Text="Reserved Room" TextColor="White" FontAttributes="Bold" FontSize="25" Margin="10,-40,0,0" AbsoluteLayout.LayoutBounds="0.5,0.94,.9,200"
        AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"/>
        <Frame BackgroundColor="White" BorderColor="Transparent" 
         AbsoluteLayout.LayoutBounds="0.5,0.94,.9,200"
         AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" CornerRadius="20" HasShadow="True">
            <Label Text="Room Type:" FontAttributes="Bold" FontSize="Default" Margin="50,-10,0,0"/>

        </Frame>



    </AbsoluteLayout>
</ContentPage>