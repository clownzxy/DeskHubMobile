<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DeskHubMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DeskHubMobile.Views"
    Title="DeskHubMobile"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="false"
    Shell.TabBarForegroundColor="#25936B"
    Shell.TabBarTitleColor="#25936B">


    <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate local:MenuPage}"
    Route="MenuPage" />

    <TabBar x:Name="Tabs">
        <Tab Icon="infoicon.png">
            <ShellContent ContentTemplate="{DataTemplate local:InfoPage}" Route="InfoPage" />
        </Tab>
        <Tab Icon="homeicon.png">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" Route="HomePage" />
        </Tab>
        <Tab Icon="roomicon.png">
            <ShellContent ContentTemplate="{DataTemplate local:RoomPage}" Route="RoomPage" />
        </Tab>
    </TabBar>

    



</Shell>
